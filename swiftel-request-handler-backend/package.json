{
  "name": "swiftel-request-handler-backend",
  "version": "1.0.0",
  "description": "Backend for the Swiftel Request Handler App",
  "main": "dist/server.js",
  "scripts": {
    "build": "npm cache clean --force && rm -rf node_modules package-lock.json && npm install && tsc",
    "start": "NODE_ENV=production node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.5",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^22.16.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
